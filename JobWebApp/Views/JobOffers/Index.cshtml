@model IEnumerable<JobWebApp.Models.JobOffer>
@{
    ViewData["Title"] = "Job Offer Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if (TempData["message"] != null)
    {
        <div class="alert alert-dismissible alert-info fade show" role="alert">
            <strong>@TempData["message"]</strong>
            <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true"></span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Job Offer Application</h3>
        </div>
        <div class="col-sm-3">
            <a class="btn btn-dark d-block" asp-action="Create" asp-controller="JobOffers">Create New Job Offer Record</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped ">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.Title)</td>
                        <td>@Html.DisplayNameFor(m => m.Local)</td>
                        <td>@Html.DisplayNameFor(m => m.PostDate)</td>
                        <td>@Html.DisplayNameFor(m => m.Wage)</td>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Local</td>
                            <td>@item.PostDate.ToString("d")</td>
                            <td>@item.Wage</td>
                            <td>                                                           
                                <a asp-controller="JobOffers" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"> Edit</a>
                                <a asp-controller="JobOffers" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> Delete</a>
                                <a asp-controller="JobOffers" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success"> Detail</a>                            
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>There are no records!</p>
        }
    </div>
</div>

