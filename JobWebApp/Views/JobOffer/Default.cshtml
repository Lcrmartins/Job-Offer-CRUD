            </div>
            <div class="modal-body">
                <!-- Modal body -->
                <h4>JobOffer</h4>
                <hr />
                <dl class="row">
                    @foreach (var item in Model)
                    {
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.Title)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Local)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.Local)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Position)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.Position.PositionType)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.Description)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Responsibility)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.Responsibility)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Responsibility)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.Responsibility)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Requirement)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.Requirement)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Requirement)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.Requirement)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.PostDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.PostDate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Wage)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.Wage)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Benefit)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.Benefit)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ModWage)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.ModWage)
                        </dd>
                    }
                </dl>
            </div>
        </div>
        <div class="modal-footer">
            <!-- Modal footer -->
            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>




