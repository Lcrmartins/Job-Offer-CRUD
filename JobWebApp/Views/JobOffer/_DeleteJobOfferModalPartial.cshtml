@model JobWebApp.Models.JobOffer

@{
    ViewData["Title"] = "Delete";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="deleteJobOffer">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color:lavender;">

            <div class="modal-header">
                <h4 class="modal-title" id="deleteJobOfferLabel"> Job Offer Delete</h4>

                <button type="button" class="close btn-close" data-dismiss="modal" aria-label="Close" aria-hidden="true">
                    <span></span>
                </button>

            </div>

            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Local)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Local)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PostDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PostDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Wage)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Wage)
                    </dd>
                </dl>                
            </div>
            <div class="modal-footer">
                <h4>Are you sure you want to delete this?</h4>
                <form class="form-group" method="post" asp-action="DeleteJob">
                    <br>
                    <label>If so, Type in the box the SIX (6) first char of the job title</label>
                    <input type="text" class="form-control" name="checker" />                    
                    <input type="hidden" asp-for="Id" />
                    <div>
                        <br />
                        <input type="submit" method="post" asp-controller="JobOffer" asp-action="DeleteJob" class="btn btn-outline-danger"></>
                        <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Back to List</button>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>

