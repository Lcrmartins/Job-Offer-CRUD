@model IEnumerable<JobWebApp.Models.Position>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style="background-color:#c4ddd3;">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Position Types</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-outline-info">Create New Type</a>
            <a asp-controller="JobOffer" asp-action="Index" class="btn btn-outline-primary">Return to Jobs</a>
        </div>
    </div>
    <br />

    <div class="col-6">

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PositionType)
                    </th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.PositionType)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">Edit</a>

                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</body>